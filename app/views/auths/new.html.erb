<div>
<%= render "shared/error_flash", model: @user %>
<%= form_with model: @user, url: "/auths", method: :post , local: true do |form|  %>
<h3 class="text-header" >Sign Up</h3>
<div class="mt-4 space-y-6">
		<div>
			<%= form.label :email %>
			<%= form.email_field :email, class: "input-field", placeholder: "Enter email"   %>
			</div>
			<div>
			<%= form.label :username %>
			<%= form.text_field :username, class: "input-field", placeholder: "Enter username" %>
			</div>
			<div>
			<%= form.label :password %>
			<%= form.password_field :password, class: "input-field", placeholder: "Enter password" %>
			</div>
			<div>
			<%= form.label :password_confirmation %>
			<%= form.password_field :password_confirmation, class: "input-field", placeholder: "Confirm password" %>
			</div>
		 <%= form.submit  "Signup" , class: "btn-primary" %>
		 <%= link_to "Go Back", articles_path, class: "btn-danger"  %>
</div>
<% end %> 
</div>