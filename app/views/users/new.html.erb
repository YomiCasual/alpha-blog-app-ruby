<div>
<%= render "shared/error_flash", model: @user %>
<%= form_with model: @user, url: "/users/#{@user.id}", method: :patch , local: true do |form|  %>
<h3 class="text-header" >Edit User</h3>
<div class="mt-4 space-y-6">
			<div>
			<%= form.label :username %>
			<%= form.text_field :username, class: "input-field", placeholder: "Enter username" %>
			</div>
			<div>
			<%= form.label :old_password %>
			<%= form.password_field :old_password, class: "input-field", placeholder: "Enter former password" %>
			</div>
			<div>
			<%= form.label :password %>
			<%= form.password_field :password, class: "input-field", placeholder: "Enter password" %>
			</div>
		 <%= form.submit  "Edit User" , class: "btn-primary" %>
		 <%= link_to "Go Back", articles_path, class: "btn-danger"  %>
</div>
<% end %> 
</div>